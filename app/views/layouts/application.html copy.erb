<body>
  <style>
    .navbar-custom {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .navbar-brand-custom {
      font-weight: 700;
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }

    .create-btn {
      background: white;
      border: 2px solid transparent;
      border-radius: 30px;
      padding: 8px 25px;
      font-weight: 500;
      transition: all 0.3s ease;
      background-image: linear-gradient(white, white), 
                        linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      background-origin: border-box;
      background-clip: padding-box, border-box;
    }

    .create-btn:hover {
      background-image: linear-gradient(white, white), 
                        linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
      box-shadow: 0 5px 15px rgba(99, 102, 241, 0.15);
      transform: translateY(-1px);
    }

    .nav-link-custom {
      color: #6c757d !important;
      position: relative;
      margin: 0 12px;
    }

    .nav-link-custom:hover,
    .nav-link-custom.active {
      color: #6366f1 !important;
    }

    .nav-link-custom::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 0;
      height: 2px;
      background: #6366f1;
      transition: width 0.3s ease;
    }

    .nav-link-custom:hover::after,
    .nav-link-custom.active::after {
      width: 100%;
    }
  </style>
  
  <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
    <div class="container">
      <%= link_to "TheGossipProject", accueil_index_path, class: "navbar-brand navbar-brand-custom" %>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto me-3">
          <li class="nav-item">
            <%= link_to "Accueil", accueil_index_path, class: "nav-link nav-link-custom #{"active" if current_page?(accueil_index_path)}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Team", team_page_home_path, class: "nav-link nav-link-custom #{"active" if current_page?(team_page_home_path)}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_contact_path, class: "nav-link nav-link-custom #{"active" if current_page?(contact_contact_path)}" %>
          </li>
        </ul>
        
        <%= link_to "CrÃ©er un gossip", new_gossip_path, class: "create-btn" %>
      </div>
    </div>
  </nav>

  <%= yield %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
