<%= form_with(model: [@gossip, @comment], url: gossips_comments_path(@gossip), method: :post) do |f| %>
  <div class="mb-3">
    <%= f.text_area :content, 
      class: 'form-control', 
      rows: 3,
      placeholder: "Laissez votre commentaire...",
      style: 'border-radius: 12px; border: 1px solid #e0e0e0;' %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "Envoyer", 
      class: 'edit-link border-0', 
      style: 'cursor: pointer; padding: 8px 25px; font-size: 0.9rem;' %>
  </div>
<% end %>
