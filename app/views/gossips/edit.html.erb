<h1>Editer Articles </h1>

<%= form_for @gossip do |f| %>

    <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class= "form-group">
        <label>Contenue du gossip </label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class= "form-group">
        <button type="submit"> Modifier le gossip </button>
    </div>
<% end %>