<div class="container py-5">
<div class="d-flex justify-content-between align-items-center mb-5">
<div>
    <h1 class="display-4 fw-bold mb-0"><%= @city.name %></h1>
    <p class="lead text-muted mb-0">
    <%= pluralize( @users.count, 'auteur') %> - 
    <%= pluralize( @gossips.count, 'potin') %>
    </p>
</div>
<%= link_to "Toutes les villes", cities_path, class: "btn btn-outline-primary rounded-pill" %>
</div>

<div class="row g-4">
<% if @gossips.any? %>
    <% @gossips.each do |gossip| %>
    <div class="col-12">
        <div class="card gossip-card shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-start gap-3">
            <div class="flex-grow-1">
                <h3 class="h5 card-title">
                <%= link_to gossip.title, gossip_path(gossip), class: "text-decoration-none" %>
                </h3>
                <div class="text-muted mb-3">
                <%= truncate(gossip.content, length: 150) %>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                <small class="text-muted">
                    <%= time_ago_in_words(gossip.created_at) %> ago
                </small>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
    <% end %>
<% else %>
    <div class="col-12">
    <div class="alert alert-info text-center py-4">
        <h4 class="alert-heading">Aucun potin dans cette ville</h4>
        <p class="mb-0">Soyez le premier à créer un potin !</p>
    </div>
    </div>
<% end %>
</div>
</div>